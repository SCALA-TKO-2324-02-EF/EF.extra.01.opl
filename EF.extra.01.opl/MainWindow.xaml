        <Label Content="KOP-OF-MUNT" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,20,0,0" HorizontalContentAlignment="Center" FontSize="28"/>

        <ListBox x:Name="LstResultaat" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,80,0,0" Width="200" Height="300"/>

        <Image x:Name="ImgMuntstuk" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,80,0,0" Width="200" Height="200"/>

        <Button x:Name="BtnWerp" Content="Werp" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,300,0,0" Width="200" Height="30" Click="BtnWerp_Click"/>

        <Button x:Name="BtnAfsluiten" Content="Afsluiten" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,350,0,0" Width="200" Height="30" Click="BtnAfsluiten_Click"/>
    </Grid>
